<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/GraphCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="15dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.LineChart>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Boutons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="15dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.hookedonplay.decoviewlib.DecoView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/arcView"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/valeur"
                android:text="1200"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/arcView"/>
            <CheckBox
                android:id="@+id/c0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data1"
                android:checked="true"
                android:layout_below="@+id/arcView"/>
            <CheckBox
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data2"
                android:checked="true"
                android:layout_below="@id/arcView"
                android:layout_toRightOf="@+id/c0"/>
            <CheckBox
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data3"
                android:checked="true"
                android:layout_below="@id/c1"/>
            <CheckBox
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data4"
                android:checked="true"
                android:layout_below="@id/c1"
                android:layout_toRightOf="@+id/c2"/>
            <Button
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Scale"
                android:layout_below="@id/c3"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/plus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_below="@id/b0"
                android:layout_marginLeft="20dp"/>
            <Button
                android:id="@+id/moins"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_toRightOf="@+id/plus"
                android:layout_below="@id/b0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/moins"
                android:text="Disconnected"
                android:id="@+id/acquisition_connection_state"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/acquisition_connection_state"
                android:text="No Data"
                android:id="@+id/acquisition_data_field"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
